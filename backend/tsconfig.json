{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@database/*": [
        "./src/database/*",
        "./dist/database/*"
      ],
      "@simulation/*": [
        "./src/simulation/*",
        "./dist/simulation/*",
      ],
      "@utils/*": [
        "./src/utils/*",
        "./dist/utils/*"
      ],
      "@env": [
        "./src/env",
        "./dist/env",
      ],
      "@types": [
        "./src/types",
        "./dist/types"
      ],
      "@constants": [
        "./src/constants",
        "./dist/constants",
      ]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "src/simulation/index.ts"]
}